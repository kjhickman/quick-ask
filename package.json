{
  "name": "quick-ask",
  "version": "0.1.0",
  "description": "Get LLM responses directly from the address bar",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rmdir /s /q dist 2>nul || true",
    "dev": "npm run clean && npm run watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.{ts,css,html}",
    "format:check": "prettier --check src/**/*.{ts,css,html}",
    "check": "npm run lint && npm run format:check && npm run build"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.1",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "type": "module"
}

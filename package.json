{
  "name": "quick-ask",
  "version": "0.10.5",
  "description": "Get LLM responses directly from the address bar",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "clean": "rm -rf dist",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@crxjs/vite-plugin": "^2.0.3",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/chrome": "^0.1.1",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "type": "module",
  "tailwindcss": {
    "content": [
      "./src/**/*.{html,js,ts,jsx,tsx}"
    ],
    "theme": {
      "extend": {
        "colors": {
          "primary": {
            "50": "#eff6ff",
            "100": "#dbeafe",
            "500": "#3b82f6",
            "600": "#2563eb",
            "700": "#1d4ed8"
          },
          "secondary": {
            "50": "#f8fafc",
            "100": "#f1f5f9",
            "500": "#64748b",
            "600": "#475569",
            "700": "#334155"
          }
        }
      }
    }
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
